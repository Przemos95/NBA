
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NBA Metrics</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/NBAMetrics/Rankings.css" />
    <link rel="stylesheet" href="~/Content/NBAMetrics/Main.css" />
    <style>
        #navi {
            background-color: #a00704 !important;
            font-size: 20px;
        }
    </style>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dropdownRankingi').hover(function () {
                $('#itemsRankingi').show();
            }, function () {
                $('#itemsRankingi').hide();
            });

            $('#dropdownPolicz').hover(function () {
                $('#itemsPolicz').show();
            }, function () {
                $('#itemsPolicz').hide();
            });
        });       
    </script>
</head>
<body style="width: 90%; margin-left: auto; margin-right: auto">
    <nav id="navi" class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">NBAMetrics</a>
            </div>
            <ul class="nav navbar-nav">
                <li id="dropdownRankingi">
                    <a id="dropdown-toggle" data-toggle="dropdown" href="#">
                        Drużyny
                        <span class="caret"></span>
                    </a>
                    @Html.Action("Menu", "Nav")
                </li>
                <li id="dropdownPolicz">
                    <a id="dropdown-toggle" data-toggle="dropdown" href="#">
                        Roczne rankingi
                        <span class="caret"></span>
                    </a>
                    @Html.Action("Seasons", "Nav")
                </li>
                <li><a href="@Url.Action("CompareTeams","Teams")">Porównaj drużyny</a></li>
                <li><a href="@Url.Action("UserGuide","Teams")">Przewodnik po NBAMetrics</a></li>
            </ul>
        </div>
    </nav>

    <div> 
        @RenderBody()
    </div>
    <div style="height:100px"></div>
</body>
</html>
